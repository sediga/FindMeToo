<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_20"
    android:gravity="center"
    android:focusable="false"
    android:background="@drawable/custom_info_bubble"
    android:descendantFocusability="blocksDescendants"
    tools:layout_editor_absoluteX="30dp"
    tools:layout_editor_absoluteY="55dp">

        <ImageButton
            android:id="@+id/activity_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/findmetoo_logo"
            android:focusable="false"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_layout1"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/text_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="false"
        app:layout_constraintLeft_toLeftOf="@id/activity_image"
        app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/text_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_activity_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_activity_title" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>